<h1>Products</h1>
<div class="text-right">
  <%= link_to "Nuevo Producto", new_product_path, class: "btn btn-primary" %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Categorias</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td><%= number_to_currency(product.price, precision: 2) %></td>
        <td>
          <!-- Se usa PLUCK para arrancar un atributo a la clase -->
          <%= product.categories.pluck(:name).join(', ') %>
          <!-- <% product.categories.each do |category| %>
            <%= category.name %>,
          <% end %> -->
        </td>
        <td>
          <%= link_to "Editar", edit_product_path(product) %>
          <%= link_to "Eliminar", product_path(product), method: :delete, data: {confirm: "Are you sure?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
